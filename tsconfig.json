{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "newLine": "LF"
    },
    "exclude": [
        "node_modules/",
        "static/"
    ]
}