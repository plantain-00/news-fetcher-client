{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "配置",
    "type": "object",
    "properties": {
        "localFiles": {
            "title": "本地文件",
            "type": "object",
            "readonly": true,
            "properties": {
                "configurationPath": {
                    "type": "string",
                    "title": "配置文件路径"
                },
                "historyPath": {
                    "type": "string",
                    "title": "历史文件路径"
                }
            },
            "required": [
                "configurationPath",
                "historyPath"
            ]
        },
        "sync": {
            "title": "同步配置",
            "type": "object",
            "properties": {
                "willSync": {
                    "type": "boolean",
                    "title": "是否开启同步，如果不开启同步，历史纪录会保存在本地",
                    "default": false,
                    "format": "checkbox"
                },
                "serverUrl": {
                    "type": "string",
                    "title": "服务器地址",
                    "default": ""
                },
                "key": {
                    "type": "string",
                    "title": "密钥",
                    "default": ""
                }
            },
            "required": [
                "willSync"
            ]
        },
        "rawSources": {
            "type": "array",
            "title": "数据源配置",
            "format": "tabs",
            "uniqueItems": true,
            "items": {
                "type": "object",
                "title": "Source",
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "命名",
                        "default": ""
                    },
                    "disabled": {
                        "type": "boolean",
                        "title": "是否禁用",
                        "default": false,
                        "format": "checkbox"
                    },
                    "url": {
                        "type": "string",
                        "title": "页面URL",
                        "default": ""
                    },
                    "isMilestone": {
                        "type": "boolean",
                        "title": "是否github项目的milestone页",
                        "default": false,
                        "format": "checkbox"
                    },
                    "selector": {
                        "type": "string",
                        "title": "选择器",
                        "default": ""
                    },
                    "getItem": {
                        "type": "string",
                        "title": "获取信息函数",
                        "default": "(cheerio, $) => {\n    return {\n        href: \"\", \n        title: \"\"\n    };\n}",
                        "format": "textarea"
                    },
                    "limit": {
                        "type": "number",
                        "title": "限制数目"
                    }
                },
                "required": [
                    "name",
                    "url",
                    "isMilestone",
                    "disabled"
                ]
            }
        }
    },
    "required": [
        "sync",
        "rawSources"
    ]
}